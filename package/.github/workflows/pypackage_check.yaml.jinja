name: template update check

on:
  workflow_dispatch:
  schedule:
    - cron: '0 0 1 * *'  # Run at 00:00 on the first day of each month

jobs:
  check_version:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: "3.10"
      - name: get latest pypackage release
        id: get_latest_release
        run: |
          RELEASE_TAG=$(curl -s https://api.github.com/12rambau/pypackage/releases/latest | jq -r '.tag_name')
          echo "latest=$RELEASE_TAG" >> $GITHUB_OUTPUT
          echo "latest release: $RELEASE_TAG"
      - name: get current pypackage version
        id: get_current_version
        run: |
          CURRENT_VERSION=$(grep -Eo "_commit: (\d+\.\d+\.\d+)" copier.yaml | cut -d " " -f 2)
          echo "current=$CURRENT_VERSION" >> $GITHUB_OUTPUT
          echo "current release: $CURRENT_VERSION"
      - name: call dispatch
        if: steps.get_current_version.outputs.current != steps.get_latest_release.outputs.latest
        uses: benc-uk/workflow-dispatch@v1
        with:
          workflow: pypackage_update.yaml
          inputs: '{"version": "${{ steps.get_latest_release.outputs.latest }}" }'
